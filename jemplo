// db.js - Conexión a la base de datos

const mysql = require('mysql');

// Conexión a la base de datos MySQL
const connection = mysql.createConnection({
  host: 'localhost',
  user: 'root',
  password: 'password',
  database: 'condominio'
});

connection.connect((err) => {
  if (err) throw err;
  console.log('Conexión exitosa a la base de datos');
});



// jest.config.js - Configuración de Jest para pruebas

module.exports = {
  testEnvironment: "jsdom", // Configuración para usar jsdom en las pruebas
  transform: {
    '^.+\\.js$': 'babel-jest', // Usar Babel para transformar código JS
  },
  setupFilesAfterEnv: ['<rootDir>/setupTests.js'], // Configuración adicional para Jest
